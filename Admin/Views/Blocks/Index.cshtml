@model IEnumerable<Block>



<div class="content-wrapper">
    <div class="page-title">
        <span class="title-data" data-main='@(ViewData["Main"])'>@ViewData["Title"]</span>
    </div>
    <div class="card main-card w-100">

        <div class="card-body">
            <a asp-action="Create" asp-route-blockType="@ViewData["BlockType"]" class="btn btn-primary my_btn btn-create btn-sm">
                <i class="fa fa-plus" aria-hidden="true"></i>
                <span>
                    Create New
                </span>
            </a>
            <table class="table table-striped table-bordered datatable" style="width:100%">
                <thead>
                    <tr>
                        <th></th>

                        <th>
                            @Html.DisplayNameFor(model => model.ArName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EnName)
                        </th>

                        <th class="d-none">
                            @Html.DisplayNameFor(model => model.Id)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.ArPicture)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EnPicture)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.DisplayOrder)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Hidden)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="dropdown data-table-dropdown">
                                    <button type="button" class="btn btn-sm btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown"
                                        aria-haspopup="true" aria-expanded="false">
                                        Action
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" asp-route-blockType="@ViewData["BlockType"]" asp-action="Edit" asp-route-id="@item.Id"> Edit </a>

                                        <a class="dropdown-item" onclick='DeleteRow("/@Html.Language()/@Html.Controller()/JsonDelete/@ViewData["BlockType"]/@item.Id")'> Delete </a>
                                        <a class="dropdown-item Duplicate" onclick='DuplicateRow("/@Html.Language()/@Html.Controller()/JsonDuplicate/@ViewData["BlockType"]/@item.Id")'> Duplicate </a>

                                    </div>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ArName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnName)
                            </td>

                            <td class="d-none">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ArPicture)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.EnPicture)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DisplayOrder)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hidden)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>